{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "target": "esnext",
    "module": "commonjs",
    "noEmit": true
  },
  "lib": [
    "DOM"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
